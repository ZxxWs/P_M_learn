<?php
//对字段的操作

$host="127.0.0.1";
$conn=mysqli_connect($host);

$con=mysqli_select_db($conn, "test");
if($con)
    echo "连接正常<br/>";

    
 //向数据库添加数据
 add();
function add(){
  
global $conn;
$addid=00010;
$addname=array("a","b","c","d","e","f","g","h","i","j","k","l","m","n","o","p","q","r","s","t","u","v","w");
for($i=0;$i<20;$i++){
    $addid+=$i;
    $addname+=$i;
$add="insert into ppp".
    "(id,name)".
    "values".
    "('$addid''$addname[$i]')";
mysqli_query($conn,$add);
echo"添加成功<br/>";
}}


//$Id=$_POST["ID"];

echo "删除的ID为".$Id."<br/>";
function drop($Idd){
    global $conn;
    $dropID="delete from ppp where id=".$Idd;
    $dropadd=mysqli_query($conn,$dropID);
    if($dropadd)
        echo "删除成功<br/>";
}



